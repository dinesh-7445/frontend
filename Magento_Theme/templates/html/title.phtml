/**
 * @var $block \Magento\Theme\Block\Html\Title
 */
$cssClass = $block->getCssClass() ? ' ' . $block->getCssClass() : '';
$titleWrapperCssClass = $block->getData('title_wrapper_css_class') ? ' ' . $block->getData('title_wrapper_css_class') : '';
$titleHtml = trim($block->getPageHeading()) ?
    '<span class="base"' . $block->getAddBaseAttribute() . '>'
    . $escaper->escapeHtml($block->getPageHeading()) . '</span>' : '';
?>

<?php if ($titleHtml): ?>
<div class="page-title-wrapper <?= $escaper->escapeHtmlAttr($titleWrapperCssClass) ?>">
    <h1 class="page-title font-bold text-3xl text-gray-800 <?= $escaper->escapeHtmlAttr($cssClass) ?>"
        <?= $block->getId() ? 'id="' . $escaper->escapeHtmlAttr($block->getId()) . '"' : '' ?>
        <?= $block->getAddBaseAttributeAria() ? 'aria-labelledby="' . $escaper->escapeHtmlAttr($block->getAddBaseAttributeAria()) . '"' : '' ?>>
        <?= /* @noEscape */ $titleHtml ?>
    </h1>
    <?= $block->getChildHtml() ?>
</div>
<?php endif; ?>
