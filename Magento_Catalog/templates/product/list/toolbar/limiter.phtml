                        <?php endif ?>>
                        <?= $escaper->escapeHtml(
                            is_numeric($_limit) ? $localeFormatter->formatNumber((int) $_limit) : $_limit
                        ) ?>
                   </option>
            <?php endforeach; ?>
    </select>
</div>
