?>
<div class="field limiter toolbar-limiter flex items-center">
        <label for="limiter" class="limiter-label mr-1 cursor-pointer text-sm text-gray-700"><?= $escaper->escapeHtml(__('Show')) ?></label>
        <select id="limiter" name="product_list_limit" class="limiter-options cursor-pointer text-sm rounded-md px-2 pr-8 py-2 text-gray-900 ring-1 ring-inset ring-gray-300" data-product-count="<?= $escaper->escapeHtmlAttr($block->getTotalNum()) ?>">
