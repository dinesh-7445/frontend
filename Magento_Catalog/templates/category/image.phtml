$_category  = $block->getCurrentCategory();
$_imgHtml   = '';
if ($_imgUrl = $block->getImage()->getUrl($_category)) {
    $_imgHtml = '
        <div class="category-image">
            <img src="'. $escaper->escapeUrl($_imgUrl). '" alt="'. $escaper->escapeHtmlAttr($_category->getName()). '" title="'. $escaper->escapeHtmlAttr($_category->getName()). '" class="image block" />
        </div>
        ';
    $_imgHtml = $block->getOutput()->categoryAttribute($_category, $_imgHtml, 'image');
    /* @noEscape */
    echo $_imgHtml;
}
